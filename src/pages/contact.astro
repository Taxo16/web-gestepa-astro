---
import Layout from '~/layouts/PageLayout.astro';
import HeroText from '~/components/widgets/HeroText.astro';
import ContactUs from '~/components/widgets/Contact.astro';
import Features2 from '~/components/widgets/Features2.astro';

const metadata = {
  title: 'Contacto | GESTEPA Asesores',
};
---

<Layout metadata={metadata}>
  <HeroText 
    tagline="Contacto" 
    title="Estamos aquí para ayudarte" 
    subtitle="¿Tienes dudas o necesitas asesoramiento para tu empresa? Contacta con nosotros y nuestro equipo te responderá a la mayor brevedad."
  />

  <ContactUs
    id="form"
    title="Envíanos un mensaje"
    subtitle="Rellena el siguiente formulario y nos pondremos en contacto contigo para estudiar tu caso."
    inputs={[
      {
        type: 'text',
        name: 'name',
        label: 'Nombre',
        placeholder: 'Tu nombre o el de tu empresa',
      },
      {
        type: 'email',
        name: 'email',
        label: 'Correo Electrónico',
        placeholder: 'ejemplo@correo.com',
      },
      {
        type: 'text', // Usamos text para permitir espacios o prefijos
        name: 'phone',
        label: 'Teléfono',
        placeholder: '600 000 000',
      },
    ]}
    textarea={{
      label: 'Mensaje',
      placeholder: 'Cuéntanos qué necesitas...',
    }}
    disclaimer={{
      label:
        'Al enviar este formulario, aceptas nuestra política de privacidad y el tratamiento de tus datos para gestionar tu consulta.',
    }}
    description="Nuestro equipo de soporte suele responder en menos de 24h laborables."
    button="Enviar Consulta"
  />

  <Features2
    title="Nuestras vías de contacto"
    subtitle="Si prefieres un trato más directo, puedes encontrarnos aquí:"
    items={[
      {
        title: 'Teléfono',
        description: '955 91 33 70',
        icon: 'tabler:phone',
        callToAction: {
            text: 'Llamar ahora',
            href: 'tel:955913370',
            variant: 'link',
        }
      },
      {
        title: 'Correo Electrónico',
        description: 'info@gestepa.com',
        icon: 'tabler:mail',
        callToAction: {
            text: 'Escribir email',
            href: 'mailto:info@gestepa.com',
            variant: 'link',
        }
      },
      {
        title: 'Nuestra Oficina',
        description: 'C/ Salvador Moreno Durán 26, 41560 Estepa (Sevilla)',
        icon: 'tabler:map-pin',
        callToAction: {
            text: 'Ver en mapa',
            href: 'https://maps.google.com/?q=Gestepa+Asesores+Estepa', // Enlace genérico a Google Maps
            target: '_blank',
            variant: 'link',
        }
      },
    ]}
  />
</Layout>